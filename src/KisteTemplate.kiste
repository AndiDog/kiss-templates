%namespace kiste
%{
  $class KisteTemplate

    %void render_header()
    %{
      $|// generated by kiste2cpp
      $|#pragma once
      %if (data._report_exceptions)
      %{
        $|#include <exception>
      %}
      $|#include <kiste/terminal.h>

      %if (data._line_directives)
      %{
        $|#line 1 "${data._filename}"
      %}
    %}

    %void render_footer()
    %{

    %}

  $endclass
%}
